  <button type="button" class= 'btn btn-secondary btn-lg'><%= link_to "Unsubscribe", new_charge_path  %></button>
  <% end %>
<br></br>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h2>Techtannica Plus</h2>
      <h4>Create your very own private wikis.</h4>
        <% if current_user.role != "premium" %>
      <button type="button" class="btn btn-secondary btn-lg"><%= link_to "Subscribe", new_charge_path  %></button>
      <% else %>
      <button type="button" class= 'btn btn-secondary btn-lg'><%= link_to "Unsubscribe", new_charge_path  %></button>
      <% end %>
    </div>
