
<%= markdown(@wiki.title) %>
<div class="row">
  <div class="col-md-8">
    <%= markdown(@wiki.body) %>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_wiki_path(@wiki), class: 'btn btn-success' %>
    <%= link_to "Delete", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
  </div>
</div>

<div class="user">
  <% if current_user.admin? || current_user.premium? %>
  <h3><%="Collaborators"%></h3>
  <% collaborating_user_ids = @wiki.collaborating_user_ids %>
  <% User.all.each do |user| %>
  <% if collaborating_user_ids.include?(user.id) %>
  <p><%= user.email %></p>
  <% end %>
  <% end %>
  <% end %>
</div>
