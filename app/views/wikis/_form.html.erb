<div class="row">
  <div class="col-md-8">
    <%= form_for @wiki do |f| %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>

    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki body" %>
    </div>
    <div class="col-md-8">
      <% if current_user.admin? || current_user.premium? && @wiki.user == current_user %>
      <div class="form-group">
        <%= f.label :private, class: 'checkbox' do %>
        <%= f.check_box :private%> Private wiki
        <% end %>
      </div>
      <% end %>
      <div class="form-group">
        <% if @wiki.private == true %>
        <p>Add a Collaborator</p>
        <% collaborating_user_ids = @wiki.collaborating_user_ids %>
        <% User.all.each do |user| %>
        <div class="user">
          <%= check_box_tag "wiki[collaborating_user_ids][]", user.id, collaborating_user_ids.include?(user.id) %>
          <%= user.email %>
        </div>
        <% end %>
      </div>
      <% end %>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    </div>
    <% end %>
  </div>
</div>
